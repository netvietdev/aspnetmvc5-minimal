@using System.Globalization
@using System.Diagnostics
@model FileVersionInfo

@{
    ViewBag.Title = "Index";
}

<br />

<div>
    <p>
        @Model.Comments
        <br/>Value of key webpages:Enabled is @ViewBag.webpagesEnabled
        <br/>
        @ViewBag.ServiceMessage
    </p>
</div>

<br />
<h2 class="label label-info">Index - Welcome</h2>
<br />

<div class="well">
    The Rabbit MVC5 Started Template is configured with following components:
    <ol>
        <li>Environment version: @Environment.Version</li>
        <li>Bootstrap 3</li>
        <li>JQuery1 or JQuery3 (depends on browser)</li>
        <li>Dependency Injection with SimpleInjector IoC</li>
        <li>Log4Net structured logging extension</li>
        <li>ELMAH MVC</li>
        <li>ASPNET MVC 5.2.9</li>
    </ol>
    <label class="label label-info">Server time @DateTime.Now.ToString(CultureInfo.InvariantCulture)</label>
</div>

<div>
    <div class="pull-left">
        <small>
            BuildDate: @ViewBag.BuildDate
        </small>
    </div>
    <div class="pull-right">
        <small>
            <a href="https://github.com/netvietdev/aspnetmvc5-minimal">
                <span class="glyphicon glyphicon-home"></span>
                Github
            </a>
        </small>
    </div>
</div>
